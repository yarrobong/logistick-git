<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= order ? `–ó–∞–∫–∞–∑ #${order.id}` : '–ù–æ–≤—ã–π –ó–∞–∫–∞–∑' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #212529; color: #fff; }
    .item-card {
      background-color: #2d3238;
      border-radius: .5rem;
      border: 1px solid rgba(255,255,255,.1);
      transition: .2s;
    }
    .item-card:hover { box-shadow: 0 0 10px rgba(0,0,0,.4); }
    .editable-field { cursor: pointer; border-bottom: 1px dashed transparent; }
    .editable-field:hover { border-bottom: 1px dashed #86b7fe; }
    .item-actions { opacity: 0; transition: .2s; }
    .item-card:hover .item-actions { opacity: 1; }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="container mt-4">
    <h1><%= order ? `–ó–∞–∫–∞–∑ #${order.id}` : '–ù–æ–≤—ã–π –ó–∞–∫–∞–∑' %></h1>

    <form id="orderForm" action="<%= order ? `/orders/${order.id}` : '/orders' %>" method="POST">
      <% if(order) { %><input type="hidden" name="_method" value="PUT"><% } %>

      <div class="row">
        <div class="col-md-6">
          <label class="form-label mt-2">–ò–º—è –∫–ª–∏–µ–Ω—Ç–∞</label>
          <input type="text" class="form-control" name="clientName" required value="<%= order?.client_name || '' %>">

          <label class="form-label mt-2">–¢–µ–ª–µ—Ñ–æ–Ω</label>
          <input type="text" class="form-control" name="clientPhone" value="<%= order?.client_phone || '' %>">

          <label class="form-label mt-2">–ì–æ—Ä–æ–¥ –ø–æ–ª—É—á–∞—Ç–µ–ª—è</label>
          <input type="text" class="form-control" name="destinationCity" required value="<%= order?.destination_city || '' %>">

          <label class="form-label mt-2">–î–∞—Ç–∞ –∑–∞–∫–∞–∑–∞</label>
          <input type="date" class="form-control" name="orderDate"
            value="<%= order ? new Date(order.order_date).toISOString().split('T')[0] : new Date().toISOString().split('T')[0] %>">

          <label class="form-label mt-2">–î–æ—Å—Ç–∞–≤–∫–∞ –ö–∏—Ç–∞–π-–ú–æ—Å–∫–≤–∞</label>
          <input type="number" step="0.01" class="form-control" id="ship1" name="shippingCostChinaMoscow" value="<%= order?.shipping_cost_china_moscow || 0 %>">

          <label class="form-label mt-2">–î–æ—Å—Ç–∞–≤–∫–∞ –ú–æ—Å–∫–≤–∞-–ì–æ—Ä–æ–¥</label>
          <input type="number" step="0.01" class="form-control" id="ship2" name="shippingCostMoscowDestination" value="<%= order?.shipping_cost_moscow_destination || 0 %>">
        </div>

        <div class="col-md-6">
          <label class="form-label mt-2">–ü–æ—Å—Ä–µ–¥–Ω–∏–∫ –ö–∏—Ç–∞–π-–ú–æ—Å–∫–≤–∞</label>
          <input type="text" class="form-control" name="intermediaryChinaMoscow" value="<%= order?.intermediary_china_moscow || '' %>">

          <label class="form-label mt-2">–¢—Ä–µ–∫-–Ω–æ–º–µ—Ä –ö–∏—Ç–∞–π-–ú–æ—Å–∫–≤–∞</label>
          <input type="text" class="form-control" name="trackingNumberChinaMoscow" value="<%= order?.tracking_number_china_moscow || '' %>">

          <label class="form-label mt-2">–ü–æ—Å—Ä–µ–¥–Ω–∏–∫ –ú–æ—Å–∫–≤–∞-–ì–æ—Ä–æ–¥</label>
          <input type="text" class="form-control" name="intermediaryMoscowDestination" value="<%= order?.intermediary_moscow_destination || '' %>">

          <label class="form-label mt-2">–¢—Ä–µ–∫-–Ω–æ–º–µ—Ä –ú–æ—Å–∫–≤–∞-–ì–æ—Ä–æ–¥</label>
          <input type="text" class="form-control" name="trackingNumberMoscowDestination" value="<%= order?.tracking_number_moscow_destination || '' %>">
        </div>
      </div>

      <button class="btn btn-primary mt-3"><%= order ? '–û–±–Ω–æ–≤–∏—Ç—å –∑–∞–∫–∞–∑' : '–°–æ–∑–¥–∞—Ç—å –∑–∞–∫–∞–∑' %></button>
    </form>

    <% if(order) { %>
      <button class="btn btn-outline-danger mt-3" id="deleteOrderBtn">–£–¥–∞–ª–∏—Ç—å –∑–∞–∫–∞–∑</button>
      <a href="/orders" class="btn btn-secondary mt-3">–ù–∞–∑–∞–¥</a>

      <hr>
      <h2>–¢–æ–≤–∞—Ä—ã</h2>
      <div id="itemsContainer">
        <% if(order.items?.length) { order.items.forEach(item => { %>
          <div class="card item-card p-3 mb-2" data-id="<%= item.id %>">
            <div class="d-flex justify-content-between align-items-start">
              <div class="flex-grow-1">
                <strong class="editable-field" data-field="product_name"><%= item.product_name %></strong>
                <div class="mt-2">
                  –ö–æ–ª-–≤–æ:
                  <span class="editable-field" data-field="quantity"><%= item.quantity %></span>,
                  –¶–µ–Ω–∞:
                  <span class="editable-field" data-field="price"><%= (+item.price).toFixed(2) %></span>,
                  –°—É–º–º–∞: <span class="item-total"><%= (+item.item_total).toFixed(2) %></span>
                </div>
              </div>
              <div class="item-actions">
                <button class="btn btn-sm btn-outline-danger delete-item">√ó</button>
              </div>
            </div>
          </div>
        <% }) } else { %>
          <p>–ù–µ—Ç —Ç–æ–≤–∞—Ä–æ–≤</p>
        <% } %>
      </div>

      <button class="btn btn-outline-light mt-2" id="addItemBtn">+ –î–æ–±–∞–≤–∏—Ç—å –ø–æ–∑–∏—Ü–∏—é</button>
      <div class="d-flex justify-content-end mt-3">
        <h5>–ò—Ç–æ–≥–æ: <span id="totalAmountDisplay"><%= (+order.total_amount).toFixed(2) %></span></h5>
      </div>
    <% } %>
  </div>

  <script>

    async function addItem(orderId) {
    const row = document.createElement('tr');
    row.innerHTML = `
        <td><input type="text" class="product-name" placeholder="–ù–∞–∑–≤–∞–Ω–∏–µ"></td>
        <td><input type="number" class="quantity" value="1" min="1"></td>
        <td><input type="number" class="price" value="0" min="0"></td>
        <td class="total">0</td>
        <td><button class="save-btn">üíæ</button></td>
    `;

    document.querySelector('#items-table tbody').appendChild(row);

    row.querySelector('.save-btn').addEventListener('click', async () => {
        const product_name = row.querySelector('.product-name').value.trim();
        const quantity = parseInt(row.querySelector('.quantity').value);
        const price = parseFloat(row.querySelector('.price').value);
        const total = quantity * price;

        if (!product_name) {
            alert('–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞');
            return;
        }

        const res = await fetch(`/orders/${orderId}/items`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ product_name, quantity, price, total })
        });

        if (res.ok) {
            const item = await res.json();
            row.innerHTML = `
                <td>${item.product_name}</td>
                <td>${item.quantity}</td>
                <td>${item.price}</td>
                <td>${item.total}</td>
                <td><button class="delete-btn">üóëÔ∏è</button></td>
            `;
        } else {
            const err = await res.text();
            console.error('–û—à–∏–±–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è:', err);
        }
    });
}

    document.addEventListener("DOMContentLoaded", () => {
      const orderId = <%= order ? order.id : 'null' %>;

      // –£–¥–∞–ª–µ–Ω–∏–µ –∑–∞–∫–∞–∑–∞
      const delOrderBtn = document.getElementById('deleteOrderBtn');
      if (delOrderBtn) {
        delOrderBtn.onclick = async () => {
          if (!confirm("–£–¥–∞–ª–∏—Ç—å –∑–∞–∫–∞–∑?")) return;
          const res = await fetch(`/orders/${orderId}?_method=DELETE`, { method: "POST" });
          if (res.ok) location.href = "/orders";
          else alert("–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è");
        };
      }

      // Inline —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ
      document.body.addEventListener("click", e => {
        if (!e.target.classList.contains("editable-field")) return;
        const span = e.target;
        const field = span.dataset.field;
        const parent = span.closest("[data-id]");
        const itemId = parent.dataset.id;
        const input = document.createElement("input");
        input.type = (field === "quantity" || field === "price") ? "number" : "text";
        input.value = span.textContent.trim();
        input.className = "form-control form-control-sm d-inline w-auto";
        span.replaceWith(input);
        input.focus();

        input.addEventListener("blur", async () => {
          const newValue = input.value.trim();
          await updateItem(itemId, field, newValue);
          span.textContent = newValue;
          input.replaceWith(span);
          updateTotals();
        });
        input.addEventListener("keydown", ev => {
          if (ev.key === "Enter") input.blur();
        });
      });

      // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞
      const addBtn = document.getElementById("addItemBtn");
      if (addBtn) {
        addBtn.onclick = async () => {
          const name = prompt("–ù–∞–∑–≤–∞–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞:");
          if (!name) return;
          const qty = +prompt("–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ:", 1);
          const price = +prompt("–¶–µ–Ω–∞:", 0);
          const res = await fetch(`/orders/${orderId}/items`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ product_name: name, quantity: qty, price })
          });
          if (res.ok) location.reload();
          else alert("–û—à–∏–±–∫–∞ –ø—Ä–∏ –¥–æ–±–∞–≤–ª–µ–Ω–∏–∏");
        };
      }

      // –£–¥–∞–ª–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞
      document.body.addEventListener("click", async e => {
        if (!e.target.classList.contains("delete-item")) return;
        const card = e.target.closest("[data-id]");
        const itemId = card.dataset.id;
        if (!confirm("–£–¥–∞–ª–∏—Ç—å –ø–æ–∑–∏—Ü–∏—é?")) return;
        const res = await fetch(`/orders/${orderId}/items/${itemId}?_method=DELETE`, { method: "POST" });
        if (res.ok) card.remove(); else alert("–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è");
        updateTotals();
      });

      async function updateItem(id, field, value) {
        try {
          const res = await fetch(`/orders/${orderId}/items/${id}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ [field]: value })
          });
          if (!res.ok) throw new Error();
        } catch {
          alert("–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Ç–æ–≤–∞—Ä–∞");
        }
      }

      function updateTotals() {
        const totals = [...document.querySelectorAll(".item-total")];
        const sum = totals.reduce((acc, t) => acc + (+t.textContent || 0), 0);
        document.getElementById("totalAmountDisplay").textContent = sum.toFixed(2);
      }
    });
  </script>
</body>
</html>