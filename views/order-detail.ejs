<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= order ? `Заказ #${order.id}` : 'Новый Заказ' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .item-card {
            transition: box-shadow 0.2s;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 0.5rem;
            background-color: #343a40;
            margin-bottom: 1rem;
        }
        .item-card:hover {
            box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.3);
        }
        .item-card .form-control,
        .item-card .form-select {
            background-color: #495057;
            color: white;
            border: 1px solid #6c757d;
        }
        .item-card .form-control:focus,
        .item-card .form-select:focus {
            background-color: #495057;
            color: white;
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
        .editable-field {
            border: 1px dashed transparent;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            cursor: pointer;
        }
        .editable-field:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
        .editable-field:focus {
            outline: none;
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
        .item-actions {
            opacity: 0;
            transition: opacity 0.2s;
        }
        .item-card:hover .item-actions {
            opacity: 1;
        }
        .editable-field {
    border: 1px dashed transparent;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    cursor: pointer;
}
.editable-field:hover {
    background-color: rgba(255, 255, 255, 0.1);
}
    </style>
</head>
<body class="bg-dark text-light">
    <%- include('partials/navbar') %>
    <div class="container mt-4">
        <h1><%= order ? `Заказ #${order.id}` : 'Новый Заказ' %></h1>

        <form id="orderForm" action="<%= order ? `/orders/${order.id}` : '/orders' %>" method="POST">
            <% if(order) { %>
                <input type="hidden" name="_method" value="PUT">
            <% } %>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="clientName" class="form-label">Имя клиента</label>
                        <% if (order && order.client_name) { %>
                            <input type="text" class="form-control" id="clientName" name="clientName" value="<%= order.client_name %>" required>
                        <% } else { %>
                            <input type="text" class="form-control" id="clientName" name="clientName" placeholder="Введите имя клиента" required>
                        <% } %>
                    </div>
                    <div class="mb-3">
                        <label for="clientPhone" class="form-label">Телефон клиента</label>
                        <% if (order && order.client_phone) { %>
                            <input type="text" class="form-control" id="clientPhone" name="clientPhone" value="<%= order.client_phone %>">
                        <% } else { %>
                            <input type="text" class="form-control" id="clientPhone" name="clientPhone" placeholder="Введите телефон клиента">
                        <% } %>
                    </div>
                    <% if (order && order.client_id) { %>
                        <input type="hidden" name="clientId" value="<%= order.client_id %>">
                    <% } %>
                    <div class="mb-3">
                        <label for="destinationCity" class="form-label">Город получателя</label>
                        <input type="text" class="form-control" id="destinationCity" name="destinationCity" value="<%= order ? order.destination_city : '' %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="status" class="form-label">Статус</label>
                        <select class="form-select" id="status" name="status" required>
                            <option value="" <%= (!order || order.status === '') ? 'selected' : '' %>>Выберите статус</option>
                            <% STATUS_CONFIG.ORDER_STATUSES.forEach(status => { %>
                                <option value="<%= status.value %>" <%= (order && order.status === status.value) ? 'selected' : '' %>><%= status.label %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="orderDate" class="form-label">Дата заказа</label>
                        <input type="date" class="form-control" id="orderDate" name="orderDate"
       value="<%= order ? (order.order_date instanceof Date ? order.order_date.getFullYear() + '-' + String(order.order_date.getMonth() + 1).padStart(2, '0') + '-' + String(order.order_date.getDate()).padStart(2, '0') : order.order_date) : new Date().toISOString().split('T')[0] %>">
                    </div>
                    <div class="mb-3">
                        <label for="shippingCostChinaMoscow" class="form-label">Доставка Китай-Москва</label>
                        <input type="number" class="form-control" id="shippingCostChinaMoscow" name="shippingCostChinaMoscow" step="0.01" value="<%= order ? order.shipping_cost_china_moscow : '0.00' %>">
                    </div>
                    <div class="mb-3">
                        <label for="shippingCostMoscowDestination" class="form-label">Доставка Москва-Город клиента</label>
                        <input type="number" class="form-control" id="shippingCostMoscowDestination" name="shippingCostMoscowDestination" step="0.01" value="<%= order ? order.shipping_cost_moscow_destination : '0.00' %>">
                    </div>
                </div>
                <div class="col-md-6">
                    <h4>Этапы доставки</h4>
                    <div class="mb-3">
                        <label for="intermediaryChinaMoscow" class="form-label">Посредник Китай-Москва</label>
                        <input type="text" class="form-control" id="intermediaryChinaMoscow" name="intermediaryChinaMoscow" value="<%= order ? order.intermediary_china_moscow : '' %>">
                    </div>
                    <div class="mb-3">
                        <label for="trackingNumberChinaMoscow" class="form-label">Трек-номер Китай-Москва</label>
                        <input type="text" class="form-control" id="trackingNumberChinaMoscow" name="trackingNumberChinaMoscow" value="<%= order ? order.tracking_number_china_moscow : '' %>">
                    </div>
                    <div class="mb-3">
                        <label for="intermediaryMoscowDestination" class="form-label">Посредник Москва-Город</label>
                        <input type="text" class="form-control" id="intermediaryMoscowDestination" name="intermediaryMoscowDestination" value="<%= order ? order.intermediary_moscow_destination : '' %>">
                    </div>
                    <div class="mb-3">
                        <label for="trackingNumberMoscowDestination" class="form-label">Трек-номер Москва-Город</label>
                        <input type="text" class="form-control" id="trackingNumberMoscowDestination" name="trackingNumberMoscowDestination" value="<%= order ? order.tracking_number_moscow_destination : '' %>">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary"><%= order ? 'Обновить Заказ' : 'Создать Заказ' %></button>
        </form>

        <% if (order) { %>
            <a href="/orders" class="btn btn-secondary">Назад к списку</a>
            <button type="button" class="btn btn-outline-danger" id="deleteOrderBtn">Удалить заказ</button>
        <% } %>

        <!-- Секция для товаров -->
        <% if (order) { %>
            <hr class="my-4">
            <h2>Товары в заказе</h2>

            <form id="itemsForm" action="/orders/<%= order.id %>/items" method="POST">
                <div class="row">
                    <div class="col-md-4">
                        <input type="text" class="form-control mb-2" name="productName" placeholder="Наименование товара" required>
                    </div>
                    <div class="col-md-2">
                        <input type="number" class="form-control mb-2" name="quantity" placeholder="Количество" min="1" value="1" required>
                    </div>
                    <div class="col-md-3">
                        <input type="number" class="form-control mb-2" name="price" step="0.01" placeholder="Цена за ед." min="0" required>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-success w-100">Добавить Товар</button>
                    </div>
                </div>
            </form>

            <div id="itemsContainer">
                <% if (order.items && order.items.length > 0) { %>
                    <% order.items.forEach(item => { %>
                        <div class="card item-card bg-secondary text-white mb-3" data-item-id="<%= item.id %>">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1 me-3">
                                        <!-- Наименование -->
                                        <div class="mb-2">
                                            <strong class="editable-field" data-field="productName" data-item-id="<%= item.id %>"><%= item.product_name %></strong>
                                        </div>
                                        <!-- Количество и цена -->
                                        <div class="d-flex gap-3 mb-2">
                                            <div>
                                                Всего: <span class="editable-field" data-field="quantity" data-item-id="<%= item.id %>"><%= item.quantity %></span>
                                            </div>
                                            <div>
                                                Цена за ед.: <span class="editable-field" data-field="price" data-item-id="<%= item.id %>"><%= (parseFloat(item.price) || 0).toFixed(2) %></span>
                                            </div>
                                            <div>
                                                Сумма: <span><%= (parseFloat(item.item_total) || 0).toFixed(2) %></span>
                                            </div>
                                        </div>
                                        <!-- Получено -->
                                        <div class="mt-2">
                                            Получено:
                                            <input type="number" class="form-control form-control-sm d-inline-block w-auto ms-2" style="width: 100px !important;" 
                                                   value="<%= item.received_quantity || 0 %>" 
                                                   min="0" 
                                                   max="<%= item.quantity %>" 
                                                   onchange="updateReceivedQuantity(<%= item.id %>, this.value, <%= item.quantity %>)">
                                            <small class="text-muted">/ <%= item.quantity %></small>
                                        </div>
                                    </div>
                                    <div class="item-actions">
                                        <button class="btn btn-sm btn-outline-danger delete-item-btn" data-item-id="<%= item.id %>">Удл.</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-center">Товаров в заказе пока нет.</p>
                <% } %>
            </div>

            <div class="mt-3">
                <button type="button" class="btn btn-outline-light" id="addItemBtn">+ Добавить ещё позицию</button>
            </div>

            <div class="d-flex justify-content-end">
                <h4>Итого: <span id="totalAmountDisplay"><%= (parseFloat(order.total_amount) || 0).toFixed(2) %></span> + Доставка: <span id="shippingCostDisplay"><%= (parseFloat(order.shipping_cost) || 0).toFixed(2) %></span> = <span id="grandTotalDisplay"><%= ((parseFloat(order.total_amount) || 0) + (parseFloat(order.shipping_cost) || 0)).toFixed(2) %></span></h4>
            </div>

            <div class="modal fade" id="editItemModal" tabindex="-1" aria-labelledby="editItemModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content bg-secondary text-white">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editItemModalLabel">Редактировать Товар</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="editItemForm" method="POST">
                                <input type="hidden" id="editItemId" name="itemId">
                                <input type="hidden" name="_method" value="PUT">
                                <div class="mb-3">
                                    <label for="editProductName" class="form-label">Наименование</label>
                                    <input type="text" class="form-control" id="editProductName" name="productName" required>
                                </div>
                                <div class="mb-3">
                                    <label for="editQuantity" class="form-label">Количество</label>
                                    <input type="number" class="form-control" id="editQuantity" name="quantity" min="1" required>
                                </div>
                                <div class="mb-3">
                                    <label for="editPrice" class="form-label">Цена за ед.</label>
                                    <input type="number" class="form-control" id="editPrice" name="price" step="0.01" min="0" required>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                            <button type="button" class="btn btn-primary" id="saveItemChangesBtn">Сохранить</button>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Flash сообщения -->
        <% if (messages.error.length > 0) { %>
            <% messages.error.forEach(msg => { %>
                <div class="alert alert-danger"><%= msg %></div>
            <% }); %>
        <% } %>
        <% if (messages.success.length > 0) { %>
            <% messages.success.forEach(msg => { %>
                <div class="alert alert-success"><%= msg %></div>
            <% }); %>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Обработчик удаления заказа
            const deleteBtn = document.getElementById('deleteOrderBtn');
            <% if (order) { %>
                const orderId = <%= order.id %>;

                if (deleteBtn) {
                    deleteBtn.addEventListener('click', function() {
                        if (confirm('Вы уверены, что хотите УДАЛИТЬ этот заказ?')) {
                            fetch(`/orders/${orderId}?_method=DELETE`, {
                                method: 'POST',
                                headers: { 'X-Requested-With': 'XMLHttpRequest' }
                            })
                            .then(response => {
                                if (response.ok) {
                                    window.location.href = '/orders';
                                } else {
                                    alert('Ошибка при удалении заказа.');
                                }
                            })
                            .catch(err => {
                                console.error('Error:', err);
                                alert('Ошибка при удалении заказа.');
                            });
                        }
                    });
                }

                // --- Обработка редактируемых полей ---
document.querySelectorAll('.editable-field').forEach(field => {
    // Делаем элемент фокусируемым
    field.setAttribute('tabindex', '-1');
    field.style.outline = 'none'; // Убираем стандартный outline при фокусе

    field.addEventListener('click', function() {
        const fieldKey = this.getAttribute('data-field');
        const itemId = this.getAttribute('data-item-id');
        const currentValue = this.textContent;

        // Заменяем на input
        const input = document.createElement('input');
        input.type = fieldKey === 'price' || fieldKey === 'quantity' ? 'number' : 'text';
        input.className = 'form-control form-control-sm';
        input.value = currentValue;
        input.setAttribute('data-field', fieldKey);
        input.setAttribute('data-item-id', itemId);
        if (fieldKey === 'quantity' || fieldKey === 'price') {
            input.step = '0.01';
            input.min = '0';
            if (fieldKey === 'quantity') input.min = '1';
        }

        this.replaceWith(input);
        input.focus();

        // Обработчик потери фокуса
        input.addEventListener('blur', function() {
            const newValue = this.value;
            const originalField = document.createElement('span');
            originalField.className = 'editable-field';
            originalField.setAttribute('data-field', fieldKey);
            originalField.setAttribute('data-item-id', itemId);
            originalField.setAttribute('tabindex', '-1');
            originalField.style.outline = 'none';
            originalField.textContent = newValue;
            originalField.addEventListener('click', arguments.callee);
            this.replaceWith(originalField);

            // Отправляем изменения на сервер
            updateItemField(itemId, fieldKey, newValue);
        });

        // Обработчик Enter
        input.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                this.blur();
            }
        });
    });
});

                // --- Обработчик кнопки "Добавить ещё позицию" ---
                document.getElementById('addItemBtn').addEventListener('click', function() {
                    const container = document.createElement('div');
                    container.className = 'card item-card bg-secondary text-white mb-3';
                    container.innerHTML = `
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1 me-3">
                                    <div class="mb-2">
                                        <input type="text" class="form-control form-control-sm" placeholder="Наименование" name="productName" required>
                                    </div>
                                    <div class="d-flex gap-3 mb-2">
                                        <div>
                                            <input type="number" class="form-control form-control-sm d-inline w-auto" style="width: 80px !important;" placeholder="Кол-во" name="quantity" min="1" value="1" required>
                                        </div>
                                        <div>
                                            <input type="number" class="form-control form-control-sm d-inline w-auto" style="width: 100px !important;" placeholder="Цена" name="price" step="0.01" min="0" required>
                                        </div>
                                    </div>
                                    <div class="mt-2">
                                        Получено:
                                        <input type="number" class="form-control form-control-sm d-inline-block w-auto ms-2" style="width: 100px !important;" 
                                               value="0" min="0" placeholder="0"
                                               onchange="this.value = Math.min(this.value, this.max);">
                                        <small class="text-muted">/ <span class="max-qty">1</span></small>
                                    </div>
                                </div>
                                <div class="item-actions">
                                    <button type="button" class="btn btn-sm btn-outline-danger remove-item-btn">Удл.</button>
                                </div>
                            </div>
                        </div>
                    `;
                    document.getElementById('itemsContainer').appendChild(container);

                    // Обработчик кнопки удаления новой позиции
                    container.querySelector('.remove-item-btn').addEventListener('click', function() {
                        container.remove();
                    });
                });

                // --- Обработчик удаления товара ---
                document.querySelectorAll('.delete-item-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const itemId = this.getAttribute('data-item-id');
                        if (confirm('Вы уверены, что хотите удалить этот товар?')) {
                            fetch(`/orders/${orderId}/items/${itemId}?_method=DELETE`, {
                                method: 'POST',
                                headers: { 'X-Requested-With': 'XMLHttpRequest' }
                            })
                            .then(response => {
                                if (response.ok) {
                                    document.querySelector(`[data-item-id="${itemId}"]`).remove();
                                } else {
                                    alert('Ошибка при удалении товара.');
                                }
                            })
                            .catch(err => {
                                console.error('Error:', err);
                                alert('Ошибка при удалении товара.');
                            });
                        }
                    });
                });

                // --- Функция обновления поля товара ---
                function updateItemField(itemId, field, value) {
                    fetch(`/orders/${orderId}/items/${itemId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        body: JSON.stringify({ [field]: value })
                    })
                    .then(response => {
                        if (!response.ok) throw new Error('Network response was not ok');
                        return response.json();
                    })
                    .then(data => {
                        // Обновляем сумму на карточке
                        const card = document.querySelector(`[data-item-id="${itemId}"]`);
                        if (card && field === 'quantity' || field === 'price') {
                            const qty = parseFloat(card.querySelector('[data-field="quantity"]').textContent) || 0;
                            const price = parseFloat(card.querySelector('[data-field="price"]').textContent) || 0;
                            const total = qty * price;
                            card.querySelector('div:last-child div:last-child span').textContent = total.toFixed(2);
                        }
                    })
                    .catch(err => {
                        console.error('Error:', err);
                        alert('Ошибка при обновлении товара.');
                    });
                }

                // --- Функция обновления полученного количества ---
                window.updateReceivedQuantity = function(itemId, value, maxQty) {
                    value = Math.min(Math.max(0, parseInt(value) || 0), maxQty);
                    fetch(`/orders/${orderId}/items/${itemId}/received`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        body: JSON.stringify({ received_quantity: value })
                    })
                    .then(response => {
                        if (!response.ok) throw new Error('Network response was not ok');
                    })
                    .catch(err => {
                        console.error('Error:', err);
                        alert('Ошибка при обновлении полученного количества.');
                    });
                };

                // --- Остальной JavaScript-код ---
                const editModal = document.getElementById('editItemModal');
                const editForm = document.getElementById('editItemForm');
                const saveBtn = document.getElementById('saveItemChangesBtn');
                const itemsTableBody = document.getElementById('itemsTableBody');

                editModal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    const itemId = button.getAttribute('data-item-id');
                    const row = document.querySelector(`tr[data-item-id="${itemId}"]`);
                    if (!row) return;

                    const name = row.querySelector('.item-name').textContent;
                    const quantity = row.querySelector('.item-quantity').textContent;
                    const price = row.querySelector('.item-price').textContent;

                    document.getElementById('editItemId').value = itemId;
                    document.getElementById('editProductName').value = name;
                    document.getElementById('editQuantity').value = parseInt(quantity);
                    document.getElementById('editPrice').value = parseFloat(price);

                    editForm.action = `/orders/${orderId}/items/${itemId}`;
                });

                saveBtn.addEventListener('click', function () {
                    editForm.submit();
                });

                // --- КОД ДЛЯ ОБНОВЛЕНИЯ ОБЩЕЙ СУММЫ ---
                const shippingCostChinaMoscowInput = document.getElementById('shippingCostChinaMoscow');
                const shippingCostMoscowDestinationInput = document.getElementById('shippingCostMoscowDestination');

                if (shippingCostChinaMoscowInput && shippingCostMoscowDestinationInput) {
                    shippingCostChinaMoscowInput.addEventListener('input', updateGrandTotalDisplay);
                    shippingCostMoscowDestinationInput.addEventListener('input', updateGrandTotalDisplay);
                    updateGrandTotalDisplay();
                }

                function updateGrandTotalDisplay() {
                    const totalAmountFromItems = parseFloat(<%= (order.total_amount || 0) %>) || 0;
                    const shippingCostChinaMoscow = parseFloat(shippingCostChinaMoscowInput.value) || 0;
                    const shippingCostMoscowDestination = parseFloat(shippingCostMoscowDestinationInput.value) || 0;
                    const totalShipping = shippingCostChinaMoscow + shippingCostMoscowDestination;
                    const grandTotal = totalAmountFromItems + totalShipping;

                    document.getElementById('shippingCostDisplay').textContent = totalShipping.toFixed(2);
                    document.getElementById('grandTotalDisplay').textContent = grandTotal.toFixed(2);
                }
            <% } %>
        });
    </script>
</body>
</html>