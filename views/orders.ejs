<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Список Заказов</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .order-card {
            transition: transform 0.2s, box-shadow 0.2s;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 0.5rem;
            overflow: hidden;
            height: 100%;
        }
        .order-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .status-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 0.8rem;
        }
        .order-id {
            font-size: 0.85rem;
            color: #adb5bd;
        }
        .order-details {
            font-size: 0.8rem;
            color: #adb5bd;
        }
    </style>
</head>
<body class="bg-dark text-light">
    <%- include('partials/navbar') %>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Список Заказов</h1>
            <a href="/orders/new" class="btn btn-primary">Создать Заказ</a>
        </div>

        <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
            <div class="row g-3">
                <% orders.forEach(order => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card bg-secondary text-white order-card position-relative h-100">
                            <!-- Тег статуса -->
                            <% const statusConfig = STATUS_CONFIG.ORDER_STATUSES.find(s => s.value === order.status); %>
                            <span class="badge <%= statusConfig ? 'bg-' + statusConfig.color : 'bg-secondary' %> status-badge">
                                <%= order.status %>
                            </span>

                            <div class="card-body d-flex flex-column">
                                <!-- Имя клиента -->
                                <h5 class="card-title mb-1"><%= order.client_name || 'N/A' %></h5>
                                
                                <!-- Город -->
                                <p class="card-text mb-1"><%= order.destination_city || 'N/A' %></p>
                                
                                <!-- Посредник и ID -->
                                <p class="order-id mb-2">
                                    <% if (order.intermediary_china_moscow) { %>
                                        <%= order.intermediary_china_moscow %> - 
                                    <% } else if (order.intermediary_china_moscow ) { %>
                                        <%= order.intermediary_china_moscow %> - 
                                    <% } else { %>
                                        Посредник: не указан - 
                                    <% } %>
                                    №<%= order.tracking_number_china_moscow %>
                                </p>

                                <!-- Дополнительная информация -->
                                <div class="order-details mt-auto">
                                    <p class="mb-1">Дата: <%= order.order_date ? new Date(order.order_date).toLocaleDateString('ru-RU') : 'N/A' %></p>
                                    <p class="mb-0">Сумма: <%= (parseFloat(order.total_with_shipping) || 0).toFixed(2) %></p>
                                </div>

                                <!-- Кнопка просмотра -->
                                <div class="mt-3">
                                    <a href="/orders/<%= order.id %>" class="btn btn-outline-light btn-sm">Подробнее</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-center">Заказов пока нет.</p>
        <% } %>

        <!-- Flash сообщения -->
        <% if (messages.error.length > 0) { %>
            <% messages.error.forEach(msg => { %>
                <div class="alert alert-danger"><%= msg %></div>
            <% }); %>
        <% } %>
        <% if (messages.success.length > 0) { %>
            <% messages.success.forEach(msg => { %>
                <div class="alert alert-success"><%= msg %></div>
            <% }); %>
        <% } %>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>